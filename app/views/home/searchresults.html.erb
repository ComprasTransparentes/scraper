<section class="container">

	<div class="panel panel-default search-panel">
		<div class="panel-body">
			<%= render partial: "searchbar" %>
		</div>
	</div>

	<div class="row">

		<div class="col-md-4 pull-right pull-resp">
			<div class="panel panel-color">
				<div class="panel-heading">
					<h5>Filtros utilizados</h5>
				</div>
				<ul class="list-unstyled filter-list">

					<li >
						<span>Búsqueda</span>
						<span>Medicamentos</span>
						<p class="no-margin">
							<em style="font-weight: 300; font-size:13px;">Se encontraron 236 coincidencias</em>
						</p>
					</li>
					
					<% 3.times do %>
						<%= render partial: "filteritem" %>
					<% end %>

				</ul>
				<div class="panel-footer">
					<button class="btn btn-primary pull-right">Refiltrar</button>
				</div>
			</div>
		</div>

		<div class="col-md-8">
			<div class="panel panel-default results-panel">
				<div class="panel-body">
					<h3>
						Resultados de Búsqueda
					</h3>

				  <!-- Result pills -->
				  <ul class="nav nav-pills search-tabs" role="tablist">
				    <li role="presentation" class="active"><a href="#tipo1" aria-controls="tipo2" role="tab" data-toggle="tab">Licitaciones <small>5</small></a></li>
				    <li role="presentation"><a href="#tipo2" aria-controls="tipo2" role="tab" data-toggle="tab">Órdenes de Compra <small>5</small></a></li>
				    <li role="presentation"><a href="#tipo3" aria-controls="tipo3" role="tab" data-toggle="tab">Organismos <small>5</small></a></li>
				    <li role="presentation"><a href="#tipo4" aria-controls="tipo4" role="tab" data-toggle="tab">Proveedores <small>5</small></a></li>
				  </ul>

				  <!-- Tab panes -->
				  <div class="tab-content search-results-panel">
				    
				    <!-- Licitaciones lista -->
				    <div role="tabpanel" class="tab-pane active" id="tipo1">
			    		<% 5.times do %>
								<%= render partial: "searchresultlicitacion" %>
							<% end %>	
				    </div>

				    <!-- Órdenes de compra lista -->
				    <div role="tabpanel" class="tab-pane" id="tipo2">
			    		<% 5.times do %>
								<%= render partial: "searchresultodc" %>
							<% end %>	
				    </div>

				    <!-- Organismos lista -->
				    <div role="tabpanel" class="tab-pane" id="tipo3">
			    		<% 5.times do %>
								<%= render partial: "searchresultorg" %>
							<% end %>	
				    </div>

				    <div role="tabpanel" class="tab-pane" id="tipo4">
			    		<% 5.times do %>
								<%= render partial: "searchresultpro" %>
							<% end %>	
				    </div>

				  </div>

				  <!-- Pagination -->
					<nav class="pull-right">
					  <%= render partial: "pagination" %>
					</nav>
				</div>
			</div>
		</div>

	</div>

</section>